<% layout("/layouts/boilerPlate")%>
    <%= success%>

        <body>
            <form action="/listings/new" method="GET">
                <br>
                <button class="btn add-btn">Create New Listing</button>
            </form>
            <br>
            <h3>All Listings</h3>
            <div class="row row-cols-lg-4 row-cols-md-2 row-cols-lg-1">
                <% for (let list of allListings){%>
                    <a href="/listings/<%=list._id%>" class="listings-link">
                        <div class="card listing-card">
                            <img src="<%=list.image.url%>" class="card-img-top" alt="listings image"
                                style="height: 17rem;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= list.title %>
                                    </b>
                                    <br>
                                    <%= list.price.toLocaleString("en-PK", { style: "currency" , currency: "PKR" }); %>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% }%>
            </div>




        </body>